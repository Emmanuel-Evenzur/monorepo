py_binary(
    name = "runfiles-py",
    srcs = ["foo.py"],
    data = [
        "datadep/hello.txt",
        "//bar:bar-py",
        "//bar:bar-java",
    ],
    main = "foo.py",
    deps = ["@bazel_tools//tools/python/runfiles"],
)

java_binary(
    name = "runfiles-java",
    srcs = ["Foo.java"],
    data = [
        "datadep/hello.txt",
        "//bar:bar-py",
        "//bar:bar-java",
    ],
    main_class = "Foo",
    deps = ["@bazel_tools//tools/runfiles:java-runfiles"],
)
