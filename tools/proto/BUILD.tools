filegroup(
    name = "srcs",
    srcs = glob(["**"]) + [
        "//tools/proto/private:srcs",
    ],
    visibility = [
        "//tools:__pkg__",
    ],
)

filegroup(
    name = "bzl_srcs",
    srcs = glob(["*.bzl"]) + [
        "//tools/proto/private:bzl_srcs",
    ],
    visibility = [
        "//tools:__pkg__",
    ],
)

# The toolchain type used to distinguish Protobuf toolchains.
toolchain_type(
    name = "toolchain_type",
    visibility = ["//visibility:public"],
)
